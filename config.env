# Staging Environment Configuration for Jewellery Catalogue

# Frontend Environment Variables (used by Vite during build)
VITE_API_URL=http://localhost:5001
VITE_AUTH_URL=http://localhost:5002

# API Service Configuration
API_CONNECTION_URI=mongodb://jewellery-catalogue-staging-mongodb:27017
API_DATABASE_NAME=jewellery-catalogue-staging
API_PORT=5001

# Auth Service Configuration
AUTH_CONNECTION_URI=mongodb://jewellery-catalogue-staging-auth-mongodb:27017
AUTH_DATABASE_NAME=jewellery-catalogue-auth-staging
AUTH_PORT=5002

# JWT Configuration
JWT_SECRET=staging-jwt-secret-change-for-production
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Cookie Security Configuration
SECURE=false
SAME_SITE=Lax

# MinIO/S3 Storage Configuration
BUCKET_NAME=jewellery-catalogue-staging
BUCKET_ACCESS_KEY=staging-access-key
BUCKET_SECRET_KEY=staging-secret-key
BUCKET_PORT=9000
BUCKET_ENDPOINT=jewellery-catalogue-staging-minio

# MinIO Admin Configuration
MINIO_ROOT_USER=staging-admin
MINIO_ROOT_PASSWORD=staging-password-123
