# Staging Environment Configuration
# Copy this file to .env.staging and fill in your staging values

# Frontend URLs
VITE_API_URL=http://localhost:8080
VITE_AUTH_URL=http://localhost:8081

# API Configuration
API_CONNECTION_URI=mongodb://localhost:28017/jewellery-catalogue-staging
API_DATABASE_NAME=jewellery-catalogue-staging
API_PORT=3001

# Auth Configuration  
AUTH_CONNECTION_URI=mongodb://localhost:28019/jewellery-catalogue-auth-staging
AUTH_DATABASE_NAME=jewellery-catalogue-auth-staging
AUTH_PORT=3008

# JWT Configuration
JWT_SECRET=staging-jwt-secret-change-this
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Security Settings
SECURE=false
SAME_SITE=lax

# MinIO Configuration
BUCKET_NAME=staging-jewellery-catalogue
BUCKET_ACCESS_KEY=staging-access-key
BUCKET_SECRET_KEY=staging-secret-key
BUCKET_PORT=8070
BUCKET_ENDPOINT=localhost
MINIO_ROOT_USER=staging-minio-admin
MINIO_ROOT_PASSWORD=staging-minio-password123 